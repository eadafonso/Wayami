.avatar
    position relative
    display inline-block
    width 2.2rem
    height 2.2rem
    line-height 2.2rem
    vertical-align middle
    border-radius 50%

.avatar-md
    @extends .avatar
    width 2.5rem
    height 2.5rem
    line-height 2.5rem

.avatar-sm
    @extends .avatar
    width 1.5rem
    height 1.5rem
    line-height 1.5rem

.avatar-lg
    @extends .avatar
    width 3rem
    height 3rem
    line-height 3rem

.avatar-xl
    @extends .avatar
    width 4rem
    height 4rem
    line-height 4rem

.avatar-xxl
    @extends .avatar
    width 6rem
    height 6rem
    line-height 6rem

.avatar-placeholder
    @extends .avatar
    background-color #ced4d9
    border none 
    text-align center
    
.avatar-list
    margin 10px 0
    >.avatar,
    .avatar-placeholder
        margin-right -.8rem
        box-shadow 0 0 0 2px #fff

.avatar-status
    @extends.avatar

.status
    position absolute
    right -2px
    bottom -2px
    padding 3px
    border 2px solid #fff
    border-radius 50%
    background-color red

.status-xl
    @extends .status
    right -1.5rem
    bottom -1.5rem

.status-xxl
    @extends .status
    right -3.3rem
    bottom -3.3rem

.status-lg
    @extends .status
    right -12px
    bottom -12px